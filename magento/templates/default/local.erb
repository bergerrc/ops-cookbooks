<config>
    <global>
        <install>
            <date><%= default[:magento][:install_date] %></date>
        </install>
        <crypt>
            <key><%= default[:magento][:crypt_key] %></key>
        </crypt>
        <disable_local_modules>false</disable_local_modules>
        <resources>
            <db>
                <table_prefix><%= default[:magento][:table_prefix] %></table_prefix>
            </db>
            <default_setup>
                <connection>
                    <host><%= @database[:host] %></host>
                    <username><%= default[:magento][:db_username] %></username>
                    <password><%= default[:magento][:db_password] %></password>
                    <dbname><%= @database[:database] %></dbname>
                    <initStatements>SET NAMES utf8</initStatements>
                    <model>mysql4</model>
                    <active>1</active>
                </connection>
            </default_setup>
        </resources>
        <session_save>{{session_save}}</session_save>
    </global>
	<default>    
		<general>
            <locale>
                <code>pt_BR</code>
                <timezone>America/Sao_Paulo</timezone>
            </locale>
        </general>
    </default>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <frontName>admin</frontName>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>